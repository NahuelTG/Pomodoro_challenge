---
import { Contador } from './Contador'
---

<div class="card">
  <header class="card__header">
    <h1 class="card__header__tittle">Pomodoro Tracker</h1>
  </header>
  <Contador client:load />
</div>
<style>
  .card {
    border-radius: 16px;
    background: var(--Black, #141c27);
    /* Shadow */
    box-shadow:
      9px 9px 16px 0px rgba(0, 0, 0, 0.24),
      -4px -4px 16px 0px rgba(73, 73, 73, 0.4);

    padding: 24px;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 24px;
    width: 244px;
    height: 424px;
  }
  .card__header {
    display: flex;
    justify-content: center;
    margin-bottom: 24px;
    color: #ffff;
    color: var(--White, #fff);
  }
  .card__header__tittle {
    /* Title */
    font-size: 24px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    margin: 0px;
  }
</style>
